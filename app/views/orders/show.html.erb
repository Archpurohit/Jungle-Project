<section class="orders-show">
  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>
  <div class="row">
    <div class="col-md-6">
      <h3>Line Items</h3>
      <table class="table">
        <thead>
          <tr>
            <th>Product</th>
            <th>Description</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Total</th>
          </tr>
        </thead>
        <tbody>
          <% @order.line_items.each do |line_item| %>
            <tr>
              <td><%= image_tag line_item.product.image.thumb.url %><br><%= line_item.product.name %></td>
              <td><%= line_item.product.description %></td>
              <td><%= line_item.quantity %></td>
              <td><%= humanized_money_with_symbol line_item.unit_price %></td>
              <td><%= humanized_money_with_symbol line_item.total_price %></td>
            </tr>
          <% end %>
        </tbody>
        <tfoot>
          <tr>
            <td colspan="4" class="text-right">Total:</td>
            <td><%= humanized_money_with_symbol @order.total_price %></td>
          </tr>
        </tfoot>
      </table>
    </div>
    <div class="col-md-6">
      <h3>Order Details</h3>
      <p><strong>Email:</strong> <%= @order.email %></p>
    </div>
  </div>
<%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>